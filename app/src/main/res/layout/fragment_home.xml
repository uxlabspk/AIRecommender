<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_bg_color"
    tools:context=".view.fragments.HomeFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_toolbar"
        app:elevation="6dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:textSize="21sp"
            android:fontFamily="@font/inter_regular"
            android:textColor="@color/light_txt_color"
            />

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:contentDescription="@string/logo_placeholder"
                android:src="@drawable/ic_main_screen" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:fontFamily="@font/inter_medium"
                android:textSize="20sp"
                android:layout_marginTop="50dp"
                android:textColor="@color/light_txt_color"
                android:text="@string/get_inspired" />

            <TextView
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_regular"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:textColor="@color/light_txt_color"
                android:text="@string/tagline" />

            <Button
                android:id="@+id/cloth_form"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginTop="60dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/black"
                android:elevation="6dp"
                android:fontFamily="@font/inter_medium"
                android:text="@string/cloth_recommender"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <Button
                android:id="@+id/makeup_form"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginHorizontal="32dp"
                android:layout_marginBottom="5dp"
                android:backgroundTint="@color/black"
                android:elevation="6dp"
                android:fontFamily="@font/inter_medium"
                android:text="@string/makeup_recommender"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>


</RelativeLayout>